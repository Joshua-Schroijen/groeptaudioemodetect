<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/recordings_list_item_recording_name"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:textSize="@dimen/general_text_size" />

    <groept.be.emodetect.uihelpers.PlaybackController
        android:id="@+id/recordings_list_item_buttons"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" />

    <ImageButton
        android:id="@+id/recordings_list_item_delete_button"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:src="@drawable/md_delete_button" />

</LinearLayout>
